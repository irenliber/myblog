.container
  .padding
  .note-card
    %h1= @note.title.html_safe
    %p= @note.content.html_safe


  = link_to(@note.prev, html_options = {class: 'btn btn-default'}) do
    %span.glyphicon.glyphicon-chevron-left
    Previous note
  = link_to(@note.next, html_options = {class: 'btn btn-default'}) do
    Next note
    %span.glyphicon.glyphicon-chevron-right

  = link_to "All notes", notes_path, class: 'btn btn-default'

